<odoo>
  <data>
 <record model="ir.ui.view" id="roma.citicens_list_view">
      <field name="name">Roma citicens List</field>
      <field name="model">roma.citicen</field>
      <field name="arch" type="xml">
        <tree >
          <field name="name"/>
          <field name="player"/>
          <field name="city"/>
          <field name="hierarchy"/>
        </tree>
      </field>
    </record>

     <record model="ir.ui.view" id="roma.citicen_form_view">
      <field name="name">Roma citicens List</field>
      <field name="model">roma.citicen</field>
      <field name="arch" type="xml">
        <form > <sheet>
            <group>
               <field name="avatar" widget="image" class="oe_avatar"/>
          <field name="name"/>
              <field name="player" />
          <field name="city"/>
          <field name="hierarchy"/>
           </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="roma.buildings_type_form_view">
      <field name="name">Roma buildings form</field>
      <field name="model">roma.building_type</field>
      <field name="arch" type="xml">
        <form >
          <sheet>
            <group>
              <group>
                <field name="icon" widget="image"/>
                <field name="name"/>
                <field name="food_production"/>
                <field name="soldiers_production"/>
              </group>
              <group>
                <field name="gold_production"/>
                <field name="metal_production"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>